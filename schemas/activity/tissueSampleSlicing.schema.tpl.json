{
    "_type": "https://openminds.ebrains.eu/ephys/TissueSampleSlicing",
    "_extends": "/core/research/ExperimentalActivity.schema.tpl.json",
    "required": [],
    "properties": {
        "input": {
            "_linkedTypes": [
                "https://openminds.ebrains.eu/core/SubjectState",
                "https://openminds.ebrains.eu/core/SubjectGroupState",
                "https://openminds.ebrains.eu/core/TissueSampleCollectionState",
                "https://openminds.ebrains.eu/core/TissueSampleState"
            ]
        },
        "output": {
            "_linkedTypes": [
                "https://openminds.ebrains.eu/core/TissueSampleState",
                "https://openminds.ebrains.eu/core/TissueSampleCollectionState"
            ]
        },
        "device": {
            "_instruction": "Add the device used to cut the tissue sample.",
            "_linkedTypes": [
                "https://openminds.ebrains.eu/core/Device",
                "https://openminds.ebrains.eu/controlledTerms/DeviceType"
            ]
        },
        "tissueBathSolution": {
            "type": "string",
            "_instruction": "Solution in which the brain was sliced (e.g. Ringer's solution)"
        },
        "temperature": {
            "_instruction": "Define the temperature of the sample during the activity.",
            "_embeddedTypes": [
                "https://openminds.ebrains.eu/core/QuantitativeValue",
                "https://openminds.ebrains.eu/core/QuantitativeValueRange"
            ]
        },
        "sectioningSpeed": {
            "_instruction": "Define the sectioning speed used in this tissue sample slicing.",
            "_embeddedTypes": [
                "https://openminds.ebrains.eu/core/QuantitativeValue"
            ]
        },
        "oscillationAmplitude": {
            "_instruction": "Define the oscillation amplitude used in this tissue sample slicing.",
            "_embeddedTypes": [
                "https://openminds.ebrains.eu/core/QuantitativeValue"
            ]
        },
        "cuttingThickness": {
            "_instruction": "Slice thickness",
            "_embeddedTypes": [
                "https://openminds.ebrains.eu/core/QuantitativeValue",
                "https://openminds.ebrains.eu/core/QuantitativeValueRange"
            ]
        },
        "slicingAngle": {
            "type": "array",
            "minItems": 1,
            "maxItems": 2,
            "_instruction": "Define one or two slicing angles in relation to the slicing plane used in this tissue sample slicing.",
            "_embeddedTypes": [
                "https://openminds.ebrains.eu/core/QuantitativeValue",
                "https://openminds.ebrains.eu/core/NumericalParameter"
            ]
        },
        "slicingPlane": {
            "_instruction": "Define the general anatomical plane of the tissue sample(s) that result from this tissue sample slicing.",
            "_linkedTypes": [
                "https://openminds.ebrains.eu/controlledTerms/AnatomicalPlane"
            ]
        },
        "vibrationFrequency": {
            "_instruction": "If applicable, define the vibration frequency used in this tissue sample slicing.",
            "_embeddedTypes": [
                "https://openminds.ebrains.eu/core/QuantitativeValue"
            ]
        }
    }
}