{
    "_type": "https://openminds.ebrains.eu/ephys/Measurement",
    "required": [
        "value",
        "timestamp",
        "measurementType"
    ],
    "properties": {
        "value": {
            "type": "array",
            "minItems": 1,
            "uniqueItems": true,
            "_instruction": "Add measured value or add all locations that the data attached to the mesurment is published",
            "_embeddedTypes": [
                "https://openminds.ebrains.eu/ephys/Array",
                "https://openminds.ebrains.eu/ephys/Datalocation",
                "https://openminds.ebrains.eu/core/QuantitativeValue"
            ]
        },
        "timeStep": {
            "_instruction": "Time step (inverted sampling frequency) of data",
            "_embeddedTypes": [
                "https://openminds.ebrains.eu/core/QuantitativeValue",
                "https://openminds.ebrains.eu/core/QuantitativeValueRange"
            ]
        },
        "timeStamp": {
            "_formats": [
                "date-time"
            ],
            "type": "string",
            "_instruction": "Date and time at which this measurement was made."
        },
        "measurementType": {
            "_instruction": "Add the type of this measurement.",
            "_linkedTypes": [
                "https://openminds.ebrains.eu/controlledTerms/MeasurementType"
            ]
        },
        "measurementDevice": {
            "type": "array",
            "minItems": 1,
            "uniqueItems": true,
            "_instruction": "Device used for this measurement",
            "linkedTypes": [
                "https://openminds.ebrains.eu/ephys/Device"
            ]
        },
        "description": {
            "type": "string",
            "_instruction": "Enter a description for this measurement"
        }
    }
}